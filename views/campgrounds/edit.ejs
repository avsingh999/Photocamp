    <div style="width:40%; margin:0px auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" style="margin:10px"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" style="margin:10px" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[escription]" value="<%= campground.description %>" style="margin:10px"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" style="margin-left:10px" >Sumbit</button>
          <a href="/campgrounds" class="btn btn-primary" style="margin-left:20px">back</a>
        </div>
      </form>

    </div>


  </div>
</div>
